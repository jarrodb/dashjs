<form action="/login" method="post">
    <div>
        <label>Username:</label>
        <input type="text" name="username"/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    {{#if error }}
    <div>
        <label>Error:</label>
        <p style="color: red;">{{{error}}}</p>
    {{/if}}
    <div>
        <input type="submit" value="Log In"/>
    </div>
</form>

